<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal_bg"
    android:padding="24dp">

    <!-- Glowing Shield Icon with Pulsating Animation -->
    <ImageView
        android:id="@+id/shieldIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_shield"  
        android:tint="@color/emerald_glow"
        android:contentDescription="Security Shield" />

    <!-- SYSTEM PROTECTED Text -->
    <TextView
        android:id="@+id/systemStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shieldIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="SYSTEM PROTECTED"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium" />

    <!-- Glassmorphic Stats Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statsCard"
        android:layout_width="match_parent"
        android:layout_height="120dp"  
        android:layout_below="@id/systemStatusText"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <!-- Glassmorphic background -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/glassmorphic_bg" 
            android:padding="24dp">

            <!-- Left side: Last Capture -->
            <LinearLayout
                android:id="@+id/leftStats"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/divider"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Last Capture Label -->
                <TextView
                    android:id="@+id/lastCaptureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last capture:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:alpha="0.8" />

                <!-- Last Capture Time -->
                <TextView
                    android:id="@+id/lastCaptureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="12:45 PM"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Vertical Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/glass_border"
                android:alpha="0.3"
                app:layout_constraintStart_toEndOf="@id/leftStats"
                app:layout_constraintEnd_toStartOf="@id/rightStats"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Right side: Events Today -->
            <LinearLayout
                android:id="@+id/rightStats"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Events Today Label -->
                <TextView
                    android:id="@+id/eventsTodayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events today:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:alpha="0.8" />

                <!-- Events Today Count -->
                <TextView
                    android:id="@+id/eventsTodayCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Status Indicator Container - MOVED BELOW THE CARD -->
    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statsCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Active"
            
            android:textSize="14sp" />

        <View
            android:id="@+id/statusDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle_green" />

    </LinearLayout>

    <!-- Ruby Red Deactivate Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deactivateButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="16dp"
        android:text="DEACTIVATE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        app:cornerRadius="30dp"
        android:background="@drawable/button_ripple"
        app:strokeColor="@color/ruby_red_dark"
        app:strokeWidth="1dp"
        android:stateListAnimator="@null" />

</RelativeLayout>